{
  "restartable": "rs",
  "ignore": [".git", ".svn", "src/", "node_modules/**/node_modules"],
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart":
      "osascript -e 'display notification \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\"'"
  },
  "watch": ["tests/mock-api/resources/", "tests/mock-api/routes/"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js,json"
}
